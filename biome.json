{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/out",
      "!**/node_modules",
      "!.claude",
      "!**/components/ui"
    ]
  },
  "assist": {
    "actions": {
      "source": { "organizeImports": "on" }
    }
  },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "css": {
    "parser": { "cssModules": true, "tailwindDirectives": true },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": { "quoteStyle": "single" }
  }
}
