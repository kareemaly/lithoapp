  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "electron"
    ],
    "overrides": {
      "@kareemaly/litho-workspace-server": "link:../litho-workspace-server"
    }
  }
